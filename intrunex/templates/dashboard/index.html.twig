{% extends 'base.html.twig' %}

{% block title %}IntruNex Dashboard{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
{% endblock %}

{% block body %}
<div id="react-dark-veil"></div>
<div class="dashboard-wrapper">
    <header class="dashboard-header">
        <div class="logo">
            <img src="{{ asset('images/logo.png') }}" alt="IntruNex Logo">
            <span>IntruNex <strong>Dashboard</strong></span>
        </div>
        <nav class="dashboard-nav">
            <a href="#" class="active">Overview</a>
            <a href="#">Reports</a>
            <a href="#">Analytics</a>
            <a href="#">Settings</a>
        </nav>
        <div class="user-profile">
            <i class="fas fa-user-circle"></i>
        </div>
    </header>

    <main class="main-content">
        <div class="header-info">
            <div class="breadcrumbs">
                Dashboard / Overview
                <span>{{ "now"|date("F d, Y") }}</span>
            </div>
        </div>
        <div class="grid-container">
            <div class="card system-health">
                <h3>System Health</h3>
                <div class="progress-donut" style="--progress: {{ (assetCount > 0) ? ((safeAssetsCount / assetCount) * 100) : 100 }};">
                    <div class="progress-text">
                        <span class="percentage">{{ (assetCount > 0) ? ((safeAssetsCount / assetCount) * 100)|round : 100 }}%</span>
                        <span class="label">Secure</span>
                    </div>
                </div>
                <div class="health-stats-grid">
                    <div class="stat-box">
                        <div class="stat-title">
                            <span class="dot green"></span> Active Assets
                        </div>
                        <div class="stat-value">{{ activeAssetsCount }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-title">
                            <span class="dot gray"></span> Inactive Assets
                        </div>
                        <div class="stat-value">{{ inactiveAssetsCount }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-title">
                            <span class="dot blue"></span> Monitored Assets
                        </div>
                        <div class="stat-value">{{ monitoredAssetsCount }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-title">
                            <span class="dot yellow"></span> Unmonitored Assets
                        </div>
                        <div class="stat-value">{{ unmonitoredAssetsCount }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-title">
                            <span class="dot red"></span> Vulnerable Assets
                        </div>
                        <div class="stat-value">{{ vulnerableAssetsCount }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-title">
                            <span class="dot green"></span> Safe Assets
                        </div>
                        <div class="stat-value">{{ safeAssetsCount }}</div>
                    </div>
                </div>
            </div>

            <div class="card assets-overview">
                <h3>Assets Overview</h3>
                <ul>
                    {% for asset in assets %}
                        <li>
                            <span class="asset-name">{{ asset.name }}</span>
                            {# Add logic for status dot based on asset properties #}
                            <span class="status-dot green"></span> Monitored
                            <span class="action-circle"></span>
                        </li>
                    {% else %}
                        <li>No assets found.</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="card recent-vulnerabilities">
                <h3>Recent Vulnerabilities by Asset</h3>
                <ul>
                    {% for vulnerability in recentVulnerabilities %}
                        <li>
                            <span class="vulnerability-name">{{ vulnerability.description }} ({{ vulnerability.asset.name }})</span>
                            <span class="severity-tag {{ vulnerability.severity|lower }}">{{ vulnerability.severity }}</span>
                            <span class="expand-icon">+</span>
                        </li>
                    {% else %}
                        <li>No recent vulnerabilities found.</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="card scan-reports">
                <h3>Scan Reports</h3>
                <table class="scan-reports-table">
                    <thead>
                        <tr>
                            <th>Report ID</th>
                            <th>Date</th>
                            <th>Asset</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for scanJob in scanJobs %}
                            <tr>
                                <td>{{ scanJob.id }}</td>
                                <td>{{ scanJob.startedAt|date('m/d/Y') }}</td>
                                <td>{{ scanJob.asset.name }}</td>
                                <td>{{ scanJob.status }}</td>
                                <td><a href="{{ path('asset_report', {'id': scanJob.asset.id}) }}" class="btn btn-primary btn-sm">View Report</a></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">No scan reports found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="card activity-log">
                <h3>Activity Log</h3>
                <ul>
                    {% for item in activity_log %}
                        <li><span class="log-dot"></span> {{ item.message }} <strong>{{ item.status }}</strong></li>
                    {% endfor %}
                </ul>
                <a href="{{ path('audit_log_index') }}" class="btn btn-secondary">VIEW FULL LOG</a>
            </div>

            <div class="card asset-management">
                <h3>Asset Management</h3>
                <div class="button-group">
                    <a href="{{ path('asset_create') }}" class="btn btn-primary">Add Asset</a>
                    <a href="{{ path('asset_list') }}" class="btn btn-secondary">View Assets</a>
                </div>
            </div>

            <div class="card scan-management">
                <h3>Scan Management</h3>
                <form action="{{ path('asset_vuln_scan', {'id': assets.0.id|default('ASSET_ID')}) }}" method="POST" id="scan-form">
                    <input type="hidden" name="_token" value="{{ csrf_token('vuln-scan-asset' ~ (assets.0.id|default('ASSET_ID')) ) }}">
                    <select id="asset-select" name="asset_id" class="form-control">
                        {% for asset in assets %}
                            <option value="{{ asset.id }}">{{ asset.name }}</option>
                        {% endfor %}
                    </select>
                    <button type="submit" class="btn btn-primary">Scan Selected Asset</button>
                </form>
            </div>
        </div>
    </main>

    <footer class="dashboard-footer">
        <p>Â© {{ "now"|date("Y") }} IntruNex. All rights reserved.</p>
        <div class="social-links">
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-linkedin-in"></i></a>
        </div>
    </footer>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const assetSelect = document.getElementById('asset-select');
        const scanForm = document.getElementById('scan-form');
        const tokenInput = scanForm.querySelector('input[name="_token"]');

        assetSelect.addEventListener('change', function() {
            const assetId = this.value;
            const action = "{{ path('asset_vuln_scan', {'id': 'ASSET_ID'}) }}".replace('ASSET_ID', assetId);
            scanForm.setAttribute('action', action);

            // This is a simplified way to handle CSRF token regeneration on the client side.
            // A better approach would be to fetch a new token via AJAX.
            // For this example, we will just update the token value with a new one based on the asset id.
            const newToken = "{{ csrf_token('vuln-scan-asset' ~ 'ASSET_ID') }}".replace('ASSET_ID', assetId);
            tokenInput.value = newToken;
        });
    });
</script>
{% endblock %}
