{% extends 'base.html.twig' %}
{% block title %}Edit Asset{% endblock %}
{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Edit Asset: {{ asset.name }}</h1>
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ messages|join(', ') }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.ipAddress, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.ipAddress, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.ipAddress) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.url, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.url) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.domain, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.domain, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.domain) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.type) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.status) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
            {{ form_errors(form.description) }}
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="{{ path('asset_list') }}" class="btn btn-secondary ms-2">Back to List</a>
    {{ form_end(form) }}

    <hr class="my-4">
    <h3>Profiling Info (Read-only)</h3>
    <ul>
        <li><strong>Operating System:</strong> {{ asset.operatingSystem ?? 'Unknown' }}</li>
        <li><strong>Open Ports:</strong> {{ asset.openPorts ? asset.openPorts|join(', ') : 'N/A' }}</li>
        <li><strong>Last Profiled:</strong> {{ asset.lastProfiledAt ? asset.lastProfiledAt|date('Y-m-d H:i') : 'Never' }}</li>
        <li><strong>Last Vulnerability Scan:</strong> {{ asset.lastVulnerabilityScanAt ? asset.lastVulnerabilityScanAt|date('Y-m-d H:i') : 'Never' }}</li>
    </ul>

    <div class="mt-3">
        <a href="{{ path('asset_profile', {id: asset.id}) }}" class="btn btn-info me-2">
            <i class="bi bi-play-circle"></i> Profile Asset
        </a>
        <a href="{{ path('asset_vuln_scan', {id: asset.id}) }}" class="btn btn-warning">
            <i class="bi bi-shield-exclamation"></i> Run Vulnerability Scan
        </a>
    </div>
</div>
{% endblock %}




