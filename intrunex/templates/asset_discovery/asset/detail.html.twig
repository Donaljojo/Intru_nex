{% extends 'base.html.twig' %}
{% block title %}Asset Details - {{ asset.name }}{% endblock %}
{% block body %}
<div class="container mt-4">
    <a href="{{ path('asset_list') }}" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back to Asset List
    </a>
    <h1>Asset: {{ asset.name }}</h1>
    <p><strong>IP Address:</strong> {{ asset.ipAddress ?? 'N/A' }}</p>
    <p><strong>URL:</strong> {{ asset.url ?? 'N/A' }}</p>
    <p><strong>Domain:</strong> {{ asset.domain ?? 'N/A' }}</p>
    <p><strong>Type:</strong> {{ asset.type }}</p>
    <p><strong>Status:</strong> {{ asset.status }}</p>
    <p><strong>Description:</strong> {{ asset.description ?? 'No description' }}</p>
    <h2 class="mt-4">Vulnerabilities</h2>
    {% if vulnerabilities is empty %}
        <p>No vulnerabilities found for this asset.</p>
    {% else %}
        <table class="table table-bordered table-hover align-middle">
            <thead>
                <tr>
                    <th>CVE ID</th>
                    <th>Description</th>
                    <th>Severity</th>
                    <th>Discovered At</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for v in vulnerabilities %}
                    <tr>
                        <td>{{ v.cveId }}</td>
                        <td>{{ v.description|length > 50 ? v.description|slice(0, 50) ~ '...' : v.description }}</td>
                        <td>{{ v.severity }}</td>
                        <td>{{ v.discoveredAt|date('Y-m-d') }}</td>
                        <td>{{ v.status }}</td>
                        <td>
                            <a href="{{ path('vulnerability_edit', {id: v.id}) }}" class="btn btn-primary btn-sm me-2">
                                Edit
                            </a>
                            <form method="post" action="{{ path('vulnerability_delete', {id: v.id}) }}" style="display:inline-block;"
                                  onsubmit="return confirm('Are you sure you want to delete this vulnerability?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete-vulnerability' ~ v.id) }}">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}


