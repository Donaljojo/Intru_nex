{% extends 'base.html.twig' %}
{% block title %}Asset Details - {{ asset.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <a href="{{ path('asset_list') }}" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back to Asset List
    </a>

    <h1>Asset: {{ asset.name }}</h1>

    <div class="card mb-3">
        <div class="card-body">
            <p><strong>IP Address:</strong> {{ asset.ipAddress ?? 'N/A' }}</p>
            <p><strong>URL:</strong> {{ asset.url ?? 'N/A' }}</p>
            <p><strong>Domain:</strong> {{ asset.domain ?? 'N/A' }}</p>
            <p><strong>Type:</strong> {{ asset.type ?? 'Unknown' }}</p>
            <p><strong>Status:</strong>
                {% if asset.status == 'Active' %}
                    <span class="badge bg-success">Active</span>
                {% else %}
                    <span class="badge bg-secondary">Inactive</span>
                {% endif %}
            </p>
            <p><strong>Last Profiled At:</strong>
                {{ asset.lastProfiledAt ? asset.lastProfiledAt|date('Y-m-d H:i:s') : 'Never' }}
            </p>
        </div>
    </div>

    {% if asset.openPorts %}
        <h3>Detected Open Services</h3>
        <ul class="list-group mb-4">
            {% for port in asset.openPorts %}
                <li class="list-group-item">
                    <i class="bi bi-plug"></i> {{ port }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p><em>No open services detected.</em></p>
    {% endif %}

    <h3>Raw Scan Report</h3>
    <pre class="bg-light p-3 border rounded" style="max-height:400px; overflow:auto;">
{{ asset.description }}
    </pre>

    <div class="mt-4">
        <form method="post" action="{{ path('asset_profile', {id: asset.id}) }}"
              onsubmit="return confirm('Re-run profiling for this asset?');">
            <input type="hidden" name="_token" value="{{ csrf_token('profile-asset' ~ asset.id) }}">
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-arrow-repeat"></i> Re-Run Profiling
            </button>
        </form>
    </div>

    <h2 class="mt-5">Vulnerabilities</h2>
    {% if vulnerabilities is empty %}
        <p>No vulnerabilities found for this asset.</p>
    {% else %}
        <table class="table table-bordered table-hover align-middle">
            <thead>
                <tr>
                    <th>CVE ID</th>
                    <th>Description</th>
                    <th>Severity</th>
                    <th>Discovered At</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for v in vulnerabilities %}
                    <tr>
                        <td>{{ v.cveId }}</td>
                        <td>{{ v.description|length > 50 ? v.description|slice(0, 50) ~ '...' : v.description }}</td>
                        <td>
                            {% if v.severity == 'High' %}
                                <span class="badge bg-danger">{{ v.severity }}</span>
                            {% elseif v.severity == 'Medium' %}
                                <span class="badge bg-warning text-dark">{{ v.severity }}</span>
                            {% else %}
                                <span class="badge bg-success">{{ v.severity }}</span>
                            {% endif %}
                        </td>
                        <td>{{ v.discoveredAt|date('Y-m-d') }}</td>
                        <td>{{ v.status }}</td>
                        <td>
                            <a href="{{ path('vulnerability_edit', {id: v.id}) }}" class="btn btn-primary btn-sm me-2">
                                Edit
                            </a>
                            <form method="post" action="{{ path('vulnerability_delete', {id: v.id}) }}" style="display:inline-block;"
                                  onsubmit="return confirm('Are you sure you want to delete this vulnerability?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete-vulnerability' ~ v.id) }}">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}



