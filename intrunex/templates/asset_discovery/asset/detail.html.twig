{% extends 'base.html.twig' %}
{% block title %}Asset Details - {{ asset.name }}{% endblock %}
{% block body %}
<div class="container mt-4">
    <a href="{{ path('asset_list') }}" class="btn btn-secondary mb-3">Back</a>
    <h1>Asset: {{ asset.name }}</h1>

    <p><strong>IP:</strong> {{ asset.ipAddress ?? 'N/A' }}</p>
    <p><strong>URL:</strong> {{ asset.url ?? 'N/A' }}</p>
    <p><strong>Domain:</strong> {{ asset.domain ?? 'N/A' }}</p>
    <p><strong>Type:</strong> {{ asset.type }}</p>
    <p><strong>Status:</strong> {{ asset.status }}</p>
    <p><strong>Description:</strong> {{ asset.description ?? 'N/A' }}</p>

    <form method="post" action="{{ path('asset_profile', {id: asset.id}) }}" style="display:inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('profile-asset' ~ asset.id) }}">
        <button type="submit" class="btn btn-info me-2">Profile</button>
    </form>

    <form method="post" action="{{ path('asset_vuln_scan', {id: asset.id}) }}" style="display:inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('vuln-scan-asset' ~ asset.id) }}">
        <button type="submit" class="btn btn-warning">Run Vulnerability Scan</button>
    </form>

    <h2 class="mt-4">Vulnerabilities</h2>
    {% if vulnerabilities is empty %}
        <p>No vulnerabilities found.</p>
    {% else %}
        <table class="table table-bordered">
            <thead><tr><th>CVE</th><th>Description</th><th>Severity</th><th>Date</th></tr></thead>
            <tbody>
                {% for v in vulnerabilities %}
                <tr>
                    <td>{{ v.cveId }}</td>
                    <td>{{ v.description|slice(0, 80) }}</td>
                    <td>{{ v.severity }}</td>
                    <td>{{ v.discoveredAt|date('Y-m-d') }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}







