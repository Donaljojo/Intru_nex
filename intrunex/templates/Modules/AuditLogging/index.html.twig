{% extends 'base.html.twig' %}

{% block title %}Activity Log{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="mt-4">Activity Log</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Full Activity Log
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Message</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for log in logs %}
                        <tr>
                            <td>{{ log.id }}</td>
                            <td>{{ log.message }}</td>
                            <td>{{ log.status }}</td>
                            <td>{{ log.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4">No activity logs found.</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}