{% extends 'base.html.twig' %}

{% block title %}Audit Log{% endblock %}

{% block body %}
    <h1>Audit Log</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>User</th>
                <th>Message</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.createdAt|date('Y-m-d H:i:s') }}</td>
                <td>{{ log.user }}</td>
                <td>{{ log.message }}</td>
                <td>{{ log.status }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
